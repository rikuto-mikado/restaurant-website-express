<footer class="restaurant-footer">
    <div class="footer-container">
        <div class="footer-content">
            <!-- restaurant info section -->
            <div class="footer-section restaurant-info">
                <div class="footer-title">Noir Bistro</div>
                <p class="footer-tagline">Fine Dining Experience</p>
                <p class="footer-description">
                    Experience culinary excellence in an intimate setting. 
                    Our chef-driven menu features seasonal ingredients and 
                    innovative techniques.
                </p>
            </div>

            <!-- contact info section -->
            <div class="footer-section contact-info">
                <h4 class="section-title">Contact</h4>
                <div class="contact-item">
                    <span class="contact-label">Address:</span>
                    <span class="contact-value">123 Gourmet Street<br>Downtown, NY 10001</span>
                </div>
                <div class="contact-item">
                    <span class="contact-label">Phone:</span>
                    <span class="contact-value">
                        <a href="#">(123) 456-7890</a>
                    </span>
                </div>
                <div class="contact-item">
                    <span class="contact-label">Email:</span>
                    <span class="contact-value">
                        <a href="mailto:info@noirbistro.com">info@noirbistro.com</a>
                    </span>
                </div>
            </div>

            <!-- hours section -->
            <div class="footer-section hours-info">
                <h4 class="section-title">Hours</h4>
                <div class="hours-list">
                    <div class="hours-item">
                        <span class="day">Monday - Thursday</span>
                        <span class="time">5:00 PM - 10:00 PM</span>
                    </div>
                    <div class="hours-item">
                        <span class="day">Friday - Saturday</span>
                        <span class="time">5:00 PM - 11:00 PM</span>
                    </div>
                    <div class="hours-item">
                        <span class="day">Sunday</span>
                        <span class="time">4:00 PM - 9:00 PM</span>
                    </div>
                </div>
            </div>

            <!-- social media section -->
            <div class="footer-section social-section">
                <h4 class="section-title">Follow Us</h4>
                <div class="social-links">
                    <a href="https://instagram.com/noirbistro" target="_blank" class="social-link" aria-label="Follow us on Instagram">
                        <i class="bi bi-instagram"></i>
                        <span class="social-name">Instagram</span>
                    </a>
                    <a href="https://facebook.com/noirbistro" target="_blank" class="social-link" aria-label="Follow us on Facebook">
                        <i class="bi bi-facebook"></i>
                        <span class="social-name">Facebook</span>
                    </a>
                    <a href="https://twitter.com/noirbistro" target="_blank" class="social-link" aria-label="Follow us on Twitter">
                        <i class="bi bi-twitter-x"></i>
                        <span class="social-name">Twitter</span>
                    </a>
                    <a href="https://linkedin.com/company/noirbistro" target="_blank" class="social-link" aria-label="Follow us on LinkedIn">
                        <i class="bi bi-linkedin"></i>
                        <span class="social-name">LinkedIn</span>
                    </a>

                <!-- quick links -->
                 <div class="quick-links">
                    <h5 class="quick-links-title">Quick Links</h5>
                    <a href="/menu" class="quick-link">View Menu</a>
                    <a href="/contact" class="quick-link">Make Reservation</a>
                    <a href="/about" class="quick-link">Our Story</a>
                </div>   
            </div>
        </div>

        <!-- footer button -->
        <div class="footer-bottom">
            <div class="footer-bottom-content">
                <p class="copyright">
                    &copy; <%= new Date().getFullYear() %> Noir Bistro. All rights reserved.
                </p>
                <div class="footer-links">
                    <a href="/privacy" class="footer-link">Privacy Policy</a>
                    <a href="/terms" class="footer-link">Terms of Service</a>
                </div>
            </div>
        </div>
    </div>
</footer>