<section class="hero-section">
    <div class="hero-background"></div>
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <div class="container">
            <div class="hero-text">
                <h1 class="hero-title">Welcome to <br> Noir Bistro</h1>
                <p class="hero-subtitle">Where Culinary Art Meets Exceptional Experience</p>
                <p class="hero-description">
                    Immerse yourself in an atmosphere of refined elegance, 
                    where every dish tells a story 
                    and every moment becomes a cherished memory.
                </p>
                <div class="hero-buttons">
                    <a href="/menu" class="btn btn-primary">View Our Menu</a>
                    <a href="/contact" class="btn btn-secondary">Make Reservation</a>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="features-section">
    <div class="container">
        <div class="features-grid">
            <div class="feature-card">
                <i class="bi bi-droplet"></i>
                <h3 class="feature-title">Curated Wine Selection</h3>
                <p class="feature-description">
                    Over 200 carefully selected wines from renowned vineyards around the world, 
                    expertly paired with our seasonal menu.
                </p>
            </div>

            <div class="feature-card">
                <i class="bi bi-emoji-neutral"></i>
                <h3 class="feature-title">Master Chef Experience</h3>
                <p class="feature-description">
                    Our award-winning chef brings 15 years of culinary expertise, 
                    crafting innovative dishes with locally sourced ingredients.
                </p>
            </div>

            <div class="feature-card">
                <i class="bi bi-cake"></i>
                <h3 class="feature-title">Intimate Ambiance</h3>
                <p class="feature-description">
                    Elegant lighting and sophisticated decor create the perfect setting 
                    for romantic dinners and special celebrations.
                </p>
            </div>
        </div>
    </div>
</section>


<section class="about-preview-section">
    <div class="container">
        <div class="about-content">
            <div class="about-text">
                <h2 class="section-title">Our Story</h2>
                <p class="about-description">
                    Founded in 2018, Noir Bistro emerged from a passion for creating extraordinary 
                    dining experiences. Our philosophy centers on the belief that great food should 
                    be accompanied by impeccable service and an atmosphere that enchants all the senses.
                </p>
                <p class="about-description">
                    Every element, from our handcrafted cocktails to our artisanal bread, 
                    is meticulously prepared to ensure your evening with us is nothing short of exceptional.
                </p>
                <a href="/about" class="btn btn-outline">Learn More About Us</a>
            </div>
            <div class="about-image">
                <div class="image-placeholder">
                    <span>Chef's Photo</span>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="menu-preview-section">
    <div class="container">
        <h2 class="section-title centered">Featured Dishes</h2>
        <p class="section-subtitle centered">A taste of what awaits you at Noir Bistro</p>

        <div class="menu-slider-container">
            <div class="menu-preview-slider">
                <% if (featuredItems && featuredItems.length > 0) { %>
                    <% featuredItems.forEach((item, index) => { %>
                        <div class="menu-item menu-slide <%= index === 0 ? 'active' : '' %>" data-slide="<%= index %>">
                            <div class="menu-image-placeholder">
                                <span><%= item.name %></span>
                            </div>
                            <div class="menu-item-content">
                                <h3 class="menu-item-name"><%= item.name %></h3>
                                <p class="menu-item-description">
                                    <%= item.description %>
                                </p>
                                <span class="menu-item-price"><%= item.price %></span>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="menu-slide active">
                        <p>No featured dishes available at the moment. Please check back later!</p>
                    </div>
                <% } %>
            </div>

            <div class="menu-slider-nav">
                <button class="menu-prev" aria-label="Previous dish">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <button class="menu-next" aria-label="Next dish">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>

            <% if (featuredItems && featuredItems.length > 0) { %>
                <div class="menu-indicators">
                    <% featuredItems.forEach((item, index) => { %>
                        <button class="menu-indicator <%= index === 0 ? 'active' : '' %>" data-slide="<%= index %>"></button>
                    <% }); %>
                </div>
            <% } %>
        </div>
        
        <div class="menu-cta">
            <a href="/menu" class="btn btn-primary">View Full Menu</a>
        </div>
    </div>
</section>